<Window x:Class="VmCompatibilityTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VM Compatibility Tool" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        MinHeight="600" MinWidth="900">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <TextBlock Text="VM Compatibility Tool" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Initial Menu Panel -->
            <StackPanel x:Name="MenuPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="SystemCheckButton" 
                       Content="시스템 사양 체크" 
                       Click="SystemCheckButton_Click"
                       Width="300" 
                       Height="70" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Background="#3498DB" 
                       Foreground="White" 
                       BorderBrush="Transparent"
                       Margin="0,20"/>
                
                <Button x:Name="VirtualizationCheckButton" 
                       Content="가상화 설정 점검" 
                       Click="VirtualizationCheckButton_Click"
                       Width="300" 
                       Height="70" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Background="#F39C12" 
                       Foreground="White" 
                       BorderBrush="Transparent"
                       Margin="0,20"/>
                
                <Button x:Name="DisableVbsHyperVButton" 
                       Content="VBS 및 Hyper-V 비활성화" 
                       Click="DisableVbsHyperVButton_Click"
                       Width="300" 
                       Height="70" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Background="#E74C3C" 
                       Foreground="White" 
                       BorderBrush="Transparent"
                       Margin="0,20"/>
            </StackPanel>

            <!-- System Info Panel -->
            <StackPanel x:Name="SystemInfoPanel" Visibility="Collapsed">
                <Button Content="← 메인 메뉴로 돌아가기" 
                       Click="BackToMenuButton_Click"
                       HorizontalAlignment="Left"
                       Background="#95A5A6" 
                       Foreground="White" 
                       BorderBrush="Transparent"
                       Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="시스템 상세 정보" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Button x:Name="ExportSystemInfoButton" 
                           Content="📄 CSV로 내보내기" 
                           Click="ExportSystemInfoButton_Click"
                           HorizontalAlignment="Right"
                           Background="#27AE60" 
                           Foreground="White" 
                           BorderBrush="Transparent"
                           Padding="10,5"
                           FontSize="12"/>
                </Grid>
                
                <DataGrid x:Name="SystemInfoDataGrid" 
                         MaxHeight="500" 
                         IsReadOnly="True"
                         AutoGenerateColumns="False"
                         HeadersVisibility="Column"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F8F9FA"
                         Background="White"
                         BorderBrush="#DDD"
                         BorderThickness="1"
                         FontSize="12"
                         RowHeight="25">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="항목" Binding="{Binding Category}" Width="120" FontWeight="Bold"/>
                        <DataGridTextColumn Header="세부 정보" Binding="{Binding Item}" Width="150"/>
                        <DataGridTextColumn Header="값" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- VBS/Hyper-V Disable Panel -->
            <StackPanel x:Name="DisablePanel" Visibility="Collapsed">
                <Button Content="← 메인 메뉴로 돌아가기" 
                       Click="BackToMenuButton_Click"
                       HorizontalAlignment="Left"
                       Background="#95A5A6" 
                       Foreground="White" 
                       BorderBrush="Transparent"
                       Margin="0,0,0,10"/>
                
                <TextBlock Text="VBS 및 Hyper-V 비활성화" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <TextBlock Text="주의: 이 작업은 다음을 수행합니다:" 
                          FontSize="13" 
                          FontWeight="Bold" 
                          Foreground="#E74C3C" 
                          Margin="0,0,0,8"/>
                
                <StackPanel Orientation="Horizontal" Margin="20,3">
                    <Ellipse Fill="Black" Width="4" Height="4" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Hyper-V 및 관련 기능 제거" FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,3">
                    <Ellipse Fill="Black" Width="4" Height="4" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="WSL2 제거" FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,3">
                    <Ellipse Fill="Black" Width="4" Height="4" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="VBS (가상화 기반 보안) 비활성화" FontSize="12"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,3">
                    <Ellipse Fill="Black" Width="4" Height="4" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="코어 격리 비활성화" FontSize="12"/>
                </StackPanel>
                
                <Button x:Name="ExecuteDisableButton" 
                       Content="비활성화 실행" 
                       Click="ExecuteDisableButton_Click"
                       Width="200" 
                       Height="35" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Background="#E74C3C" 
                       Foreground="White" 
                       BorderBrush="Transparent"
                       Margin="0,15"/>
                
                <TextBox x:Name="DisableResultTextBox" 
                        MaxHeight="350" 
                        IsReadOnly="True" 
                        VerticalScrollBarVisibility="Auto"
                        TextWrapping="Wrap"
                        Background="#F8F9FA"
                        FontFamily="Consolas"
                        FontSize="11"
                        Text="비활성화 작업을 실행하려면 위의 버튼을 클릭하세요."/>
            </StackPanel>

            <!-- Virtualization Check Panel -->
            <StackPanel x:Name="VirtualizationPanel" Visibility="Collapsed">
                <Button Content="← 메인 메뉴로 돌아가기" 
                       Click="BackToMenuButton_Click"
                       HorizontalAlignment="Left"
                       Background="#95A5A6" 
                       Foreground="White" 
                       BorderBrush="Transparent"
                       Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="가상화 설정 점검" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Button x:Name="ExportVirtualizationInfoButton" 
                           Content="📄 CSV로 내보내기" 
                           Click="ExportVirtualizationInfoButton_Click"
                           HorizontalAlignment="Right"
                           Background="#27AE60" 
                           Foreground="White" 
                           BorderBrush="Transparent"
                           Padding="10,5"
                           FontSize="12"/>
                </Grid>
                
                <DataGrid x:Name="VirtualizationDataGrid" 
                         MaxHeight="500" 
                         IsReadOnly="True"
                         AutoGenerateColumns="False"
                         HeadersVisibility="Column"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F8F9FA"
                         Background="White"
                         BorderBrush="#DDD"
                         BorderThickness="1"
                         FontSize="12"
                         RowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="항목" Binding="{Binding Category}" Width="150" FontWeight="Bold"/>
                        <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="상세 정보" Binding="{Binding Details}" Width="*"/>
                        <DataGridTextColumn Header="권장사항" Binding="{Binding Recommendation}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10,5">
            <Grid>
                <TextBlock x:Name="StatusTextBlock" Text="준비됨" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="VersionTextBlock" Text="v1.0.0" FontSize="11" Foreground="#7F8C8D" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>